                    <!-- blog comment list -->
                    <div id="single-comments" class="single-comments single-box mb-4">
                        <h5 class="border-b pb-2 mb-2">Hiển thị @tourComment.Count() bình luận của khách hàng</h5>
                        @foreach(var item in tourComment)
                        {
                        <div class="comment-box">
                            <div class="comment-image">
                                    <img src="@item.Image" alt="image" style="max-width: 99px; max-height: 99px;">

                            </div>
                            <div class="comment-content rounded">
                                <h5 class="mb-1">@item.Name</h5>
                                <p class="comment-date">@item.CreatedDate.Value.ToString("dd/MM/yyyy")</p>
                                <div class="comment-rate">
                                        <div class="rating mar-right-15">
                                            <ul>
                                                @for (var i = 0; i < item.Star; i++)
                                                {
